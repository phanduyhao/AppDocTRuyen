<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="13dp"
    android:paddingBottom="13dp"
    android:background="@drawable/custom_comment">
    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        app:cardCornerRadius="250dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/book" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="3dp"
        android:paddingRight="8dp"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_namecomment"
            android:textSize="17dp"
            android:textStyle="bold"
            android:text="Nguyen Quoc Khanh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_contentcomment"
            android:textSize="16dp"
            android:text="truyen hay qua :)))))"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_commenttimecomment"
            android:textSize="14dp"
            android:text="dd/mm/yy 00:00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>